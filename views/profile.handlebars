<div>
  <h1>Welcome, {{user_name}}</h1>
</div>

<div>
  <form class="new-job-application">
    <div class="jobTitle">
      <label for="jobTitle">Job Title:</label>
      <input type="text" id="jobTitle" />
    </div>
    <div class="companyName">
      <label for="companyName">Company Name:</label>
      <input type="text" id="companyName" />
    </div>
    <div class="salary">
      <label for="salary">Salary:</label>
      <input type="text" id="salary" />
    </div>
    <div class="applicationStatus">
      <label for="applicationStatus">Application Status:</label>
      <input type="text" id="applicationStatus" />
    </div>
    <div>
      <button id="addJob">Add Job Application</button>
    </div>
  </form>
</div>

{{#if jobApplications.length}}
  {{#each jobApplications as |jobApplication|}}
    <div class="job-card">
      <div class="job-card-header">
        <h2>
          {{jobApplication.jobTitle}}
          <p>Company Name: {{jobApplication.company_name}}</p>
          <p>Salary: {{jobApplication.salary}}</p>
          <p>Status: {{jobApplication.application_status}}</p>
        </h2>
      </div>
    </div>
  {{/each}}
{{/if}}

<script src="./js/profile.js"></script>